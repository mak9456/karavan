<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_quotation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mak9456.karavan.Quotation"
    tools:showIn="@layout/activity_quotation">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Location"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/from_city"
            android:hint="Source"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/to_city"
            android:layout_marginTop="20dp"
            android:layout_marginRight="59dp"
            android:layout_toRightOf="@+id/from_city"
            android:hint="Destination"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Journey Dates:"
            android:textSize="20dp"
            android:layout_marginTop="29dp"
            android:id="@+id/jrny"
            android:layout_below="@+id/from_city"
            android:layout_centerHorizontal="true"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/from_date"
            android:layout_below="@+id/jrny"
            android:hint="Startdate"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/to_date"
            android:layout_marginRight="59dp"
            android:layout_below="@+id/jrny"
            android:layout_toRightOf="@+id/from_date"
            android:hint="enddate"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/max_people"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/from_date"
            android:hint="People"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/max_people"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:id="@+id/Search_quote"
            android:text="Check"/>

    </RelativeLayout>

</LinearLayout>
